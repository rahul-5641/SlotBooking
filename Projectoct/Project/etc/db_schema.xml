<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

<table name="booking">
      <column xsi:type="int" name="id" unsigned="false" nullable="false" identity="true" comment="Value ID"/>
      <column xsi:type="varchar" name="name" nullable="false" length="25" comment="Name"/>
    <column xsi:type="date" name="date"  nullable="false"  />
    <column xsi:type="varchar" name="slot" nullable="false"  />
    <constraint xsi:type="primary" referenceId="PRIMARY">
        <column name="id"/>
    </constraint>
    
</table>
</schema>
